{
  "name": "cep_checker",
  "version": "1.0.1",
  "description": "Buscador de CEP gratuito",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "Cep Checker",
    "win": {
      "target": [
        "nsis"
      ]
    },

    "directories": {
      "buildResources": "./public/img"
    },

    "nsis": {
      "uninstallDisplayName": "CEP Checker",
      "deleteAppDataOnUninstall": true,
      "license": "license.txt",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [],
  "author": "Victor Atavila",
  "license": "ISC",
  "devDependencies": {
    "electron": "^11.0.3",
    "electron-builder": "^22.9.1",
    "nodemon": "^2.0.6"
  },
  "dependencies": {
    "ejs": "^3.1.5",
    "ejs-electron": "^2.1.1",
    "express": "^4.17.1"
  }
}
